<Window x:Class="LauncherForOakwoodWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LauncherForOakwoodWPF"
        mc:Ignorable="d"
        Title="Launcher for Mafia: Oakwood" Height="434" Width="894" Icon="Untitled-1_1.ico" ResizeMode="NoResize" FontSize="16">
    <Grid Margin="0,0,-6,-5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70*"/>
            <ColumnDefinition Width="243*"/>
            <ColumnDefinition Width="437*"/>
            <ColumnDefinition Width="144*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="ConfirmButton" Content="Confirm settings and launch the game" HorizontalAlignment="Left" Margin="40,310,0,0" VerticalAlignment="Top" Width="288" Height="40" FontSize="16" Opacity="0.65" BorderThickness="1" Grid.ColumnSpan="2" Click="ConfirmButton_Click" Grid.Column="1" />
        <Button x:Name="ReadJaSONButton" Content="Tap here if you want to read JaSON-files" Grid.Column="2" HorizontalAlignment="Left" Margin="110,310,0,0" VerticalAlignment="Top" Width="303" Height="40" FontSize="16" Opacity="0.65" Click="ReadJaSONButton_Click"/>
        <Label Content="Resolution settings:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="215" FontSize="22" FontWeight="Bold" FontFamily="Lato" Grid.Column="2" Height="36"/>
        <Label Content="Width:" HorizontalAlignment="Left" Margin="125,62,0,0" VerticalAlignment="Top" FontSize="16" Grid.Column="1" Height="31" Width="56"/>
        <TextBox x:Name="WidthBox" HorizontalAlignment="Left" Height="29" Margin="186,64,0,0" TextWrapping="WrapWithOverflow" VerticalAlignment="Top" Width="113" FontSize="16" Grid.ColumnSpan="2" Grid.Column="1"/>
        <Label Content="Height:" HorizontalAlignment="Left" Margin="90,62,0,0" VerticalAlignment="Top" FontSize="16" Grid.Column="2" Height="31" Width="61"/>
        <TextBox x:Name="HeightBox" HorizontalAlignment="Left" Height="29" Margin="156,64,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="113" FontSize="16" Grid.Column="2"/>
        <Label Content="Other settings:" HorizontalAlignment="Left" Margin="41,120,0,0" VerticalAlignment="Top" Width="161" FontSize="22" FontWeight="Bold" Height="35" FontFamily="Lato" Grid.Column="2"/>
        <Label Content="Mafia directory:" HorizontalAlignment="Left" Margin="51,158,0,0" VerticalAlignment="Top" FontSize="16" Grid.Column="1" Height="31" Width="120"/>
        <TextBox x:Name="MafiaPathBox" HorizontalAlignment="Left" Height="29" Margin="176,160,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="323" FontSize="16" Grid.ColumnSpan="2" Grid.Column="1"/>
        <Button x:Name="ChooseMafiaPath" Content="Choose Mafia dir." Grid.Column="2" HorizontalAlignment="Left" Margin="279,161,0,0" VerticalAlignment="Top" Width="152" FontSize="14" Height="28" Click="ChooseMafiaPath_Click" Opacity="0.65"/>
        <Label Content="Oakwood directory:" HorizontalAlignment="Left" Margin="23,204,0,0" VerticalAlignment="Top" FontSize="16" Grid.Column="1" Height="31" Width="148"/>
        <TextBox x:Name="OakPathBox" HorizontalAlignment="Left" Height="29" Margin="176,206,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="323" FontSize="16" Grid.ColumnSpan="2" Grid.Column="1"/>
        <Button x:Name="ChooseOakPath" Content="Choose Oakwood dir." Grid.Column="2" HorizontalAlignment="Left" Margin="279,204,0,0" VerticalAlignment="Top" Width="152" FontSize="14" Height="31" Click="ChooseOakPath_Click" Opacity="0.65"/>
        <TextBox x:Name="NickNameBox" HorizontalAlignment="Left" Height="29" Margin="129,251,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="157" FontSize="16" Grid.ColumnSpan="2" RenderTransformOrigin="0.488,1.061" Grid.Column="1"/>
        <Label Content="Nickname:" HorizontalAlignment="Left" Margin="40,249,0,0" VerticalAlignment="Top" FontSize="16" Grid.Column="1" Height="31" Width="84"/>
        <Label Content="Anti-aliasing:" HorizontalAlignment="Left" Margin="74,249,0,0" VerticalAlignment="Top" FontSize="16" Grid.Column="2" RenderTransformOrigin="0.505,0.71" Height="31" Width="102"/>
        <ComboBox x:Name="AntiAliasingBox" Grid.Column="2" HorizontalAlignment="Left" Margin="181,251,0,0" VerticalAlignment="Top" Width="156" Height="29" FontSize="16">
            <ComboBoxItem Content="0"/>
            <ComboBoxItem Content="2"/>
            <ComboBoxItem Content="4"/>
        </ComboBox>
        <CheckBox x:Name="IsFullScreenCheck" Content="Fullscreen Mode" Grid.Column="2" HorizontalAlignment="Left" Margin="295,68,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.357,-0.223" FontSize="16" Height="20" Width="136"/>
    </Grid>
</Window>
